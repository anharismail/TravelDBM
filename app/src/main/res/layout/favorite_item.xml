<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D1A1FF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:layout_margin="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/favorite_item_content_description"
        android:src="@drawable/fav_backg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="4dp"
        android:background="@drawable/gradient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_weight="2"
            android:id="@+id/favorite_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="italic"
            tools:text="Hotel Sheraton and Convention Center" />

        <LinearLayout
            android:layout_weight="2"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favorite_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Address: 2880 Las Vegas Blvd South Las Vegas NV 89109 US" />

            <TextView
                android:id="@+id/favorite_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Phone: +1 702 734-0410" />

            <TextView
                android:id="@+id/favorite_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Location: Las Vegas - US" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>